<div class="col-sm-9 mt-5">
    <div class="mt-2">
        <Text style="color: #6B6B6B;
                        font-size: 36px;
                        font-family: Poppins;
                        font-weight: 600;
                        letter-spacing: 0.36px;
                        word-wrap: break-word">Thêm Người Dùng</Text>
    </div>
    <div class="row mt-3 rounded-3 d-flex justify-content-center m-5" style="height: 800px; background-color: #F5F6F8;">
        <form action="/adduser" method="POST" enctype="multipart/form-data">

            <div class="row justify-content-center align-items-center" style="width: 180px; height: 200px; margin: 0 auto;">
                <img id="image" src="../../../images/updateimg.png" alt="Lỗi" style="width: 150px; height: 150px;">
                <label for="imageInput" class="btn" style="background-color: #972400; color: white;">Chọn ảnh</label>
                <input id="imageInput" type="file" name="myImage" accept="image/*" onchange="loadImage(event)"
                    style="display: none;">
            </div>

            <script>
                var loadImage = function (event) {
                    var img = document.getElementById("image");
                    img.src = URL.createObjectURL(event.target.files[0]);
                };
            </script>

            <div class="row" style="margin-top: 20px;">
                <div class="mb-3">
                    <div class="row">
                        <label for="exampleInputEmail1" class="form-label">Tên người dùng <span
                                class="text-danger">*</span></label>
                    </div>
                    <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <div class="row">
                        <label for="exampleInputEmail1" class="form-label">Địa chỉ <span
                                class="text-danger">*</span></label>
                    </div>
                    <input type="text" name="address" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <div class="row">
                        <label for="exampleInputEmail1" class="form-label">Điện thoại <span
                                class="text-danger">*</span></label>
                    </div>
                    <input type="text" name="phone" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <div class="row">
                        <label for="exampleInputEmail1" class="form-label">Mật khẩu <span
                                class="text-danger">*</span></label>
                    </div>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3">
                    <div class="row">
                        <label for="exampleInputEmail1" class="form-label">Trạng thái <span
                                class="text-danger">*</span></label>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Trạng thái</label>
                            <select class="form-select" name="selectStatus">
                                <option value="Admin">Admin</option>
                                <option value="Thủ thư">Thủ thư</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center align-items-center">
                    <button class="btn p-2" type="submit"
                        style="background-color: #8C2100; color: white; width: 400px;height: 50px;">Thêm người
                        dùng</button>
                </div>
        </form>


    </div>
</div>
</div>